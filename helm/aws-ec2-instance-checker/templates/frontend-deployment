apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "cto-wizard.fullname" . }}
  namespace: {{ .Values.namespace }}
  labels:
    {{- include "cto-wizard.labels" . | nindent 4 }}
spec:
  replicas: {{ .Values.frontend.replicaCount }}
  selector:
    matchLabels:
      app: {{ include "cto-wizard.name" . }}
  template:
    metadata:
      labels:
        app: {{ include "cto-wizard.name" . }}
    spec:
      containers:
        - name: {{ .Chart.Name }}
          image: "{{ .Values.frontend.image.repository }}:{{ .Values.frontend.image.tag }}"
          imagePullPolicy: {{ .Values.frontend.image.pullPolicy }}
          ports:
            - name: http
              containerPort: {{ .Values.frontend.containerPort }}
          env:
            - name: OPA_URL
              value: "http://opa:8181"